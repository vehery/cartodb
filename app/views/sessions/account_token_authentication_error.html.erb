<% content_for :title do %><%= @user ? @user.username : 'User ' %> authentication error<% end %>

<div class="CDB-Text <%= @organization.present? ? 'Sessions' : 'Sessions-navy' %>" style="<%= @organization.present? ? background : '' %>">
  <div class="Sessions-content">
    <div class="Sessions-inner">
      <div class="u-inner">
        <div class="Sessions-center Sessions--centered">
          <div class="Sessions-logoContainer">
            <%= render :partial => 'shared/logo', locals: { organization: @organization } %>
          </div>

          <div class="js-info">
            <h1 class="Sessions-title u-tspace-m">You must validate your email account</h1>
              <p class="Sessions-description">Please check your email inbox and click the "Activate your account" button in the welcome mail.</p>

            <% if @user %>
              <p class="Sessions-description">If you didn't receive your validation email, click <a href="<%= CartoDB.url(self, 'resend_validation_mail', params: { :user_id => @user.id }) %>">here</a> and a new email will be sent directly to you.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
